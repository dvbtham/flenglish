<fieldset>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :video_url %>
    <%= f.url_field :video_url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :_destroy %>
    <%= link_to "#", class: "remove_episodes text-danger" do %>
      <i class="glyphicon glyphicon-remove"></i> <%= t("remove") %>
    <% end %>
  </div>
</fieldset>
