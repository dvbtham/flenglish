<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-header">
          <!-- form search -->
          <%= form_tag admin_movies_path, method: :get, enforce_utf8: false,
            class: "form-inline" do %>
            <h1>
              <%= t("admin.views.movies.page_heading") %>
              <%= text_field_tag :term, params[:term],
                class: "form-control" %>
              <%= submit_tag t("admin.submit.movie.search"), name: nil,
                class: "btn btn-default" %>
            </h1>
          <% end %>
        </div>
        <!-- form filter -->
        <div class="well well-sm">
          <%= form_tag admin_movies_path, method: :get, id: "filter",
            class: "form-inline", enforce_utf8: false, remote: true do %>
            <%= select_tag(:level, options_for_select(@levels),
              include_blank: t("admin.views.movies.filter_level"),
              class: "btn btn-default") %>
            <%= select_tag(:category,
              options_for_select(@categories),
              include_blank: t("admin.views.movies.filter_category"),
              class: "btn btn-default") %>
            <%= select_tag(:genre, options_for_select(@genres),
              include_blank: t("admin.views.movies.filter_genre"),
              class: "btn btn-default") %>
            <%= select_tag(:column_sort,
              options_for_select(@sort_by),
              include_blank: t("admin.views.movies.filter_sort"),
              class: "btn btn-default") %>
            <%= submit_tag t("admin.submit.movie.filter"), name: nil,
              class: "btn btn-default" %>
            <%= hidden_field_tag :term, params[:term] %>
          <% end %>
        </div>
        <div><%= render "shared/flash" %></div>
        <!-- table movies -->
        <% if @movies.blank? %>
          <div class="alert alert-danger">
            <%= t("admin.views.movies.not_found") %>
          </div>
        <% else %>
          <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th><%= t("admin.views.movies.title") %></th>
                  <th><%= t("admin.views.movies.cate") %></th>
                  <th><%= t("admin.views.movies.genres") %></th>
                  <th><%= t("admin.views.movies.episodes") %></th>
                  <th><%= t("admin.views.movies.views") %></th>
                  <th><%= t("admin.views.movies.rating") %></th>
                  <th><%= t("action") %></th>
                </tr>
              </thead>
              <tbody id="movies">
                <%= render @movies %>
              </tbody>
            </table>
            <div id="movies-paging" align="center">
              <%= will_paginate @movies %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
