<div id="subtitle-form-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;
        </button>
        <h4 class="modal-title">
          <%= t "title.add.subtitle" %>
        </h4>
      </div>
      <div class="modal-body">
        <%= form_tag admin_movie_subtitles_path(@movie), remote: true,
          html: {id: "subtitle-form"} do %>
          <%= hidden_field_tag :episode_id, value: "" %>
          <div class="form-group">
            <%= label_tag :engsub %>
            <%= text_field_tag :engsub, "", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :vietsub %>
            <%= text_field_tag :vietsub, "", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :subtitle_at %>
            <%= text_field_tag :subtitle_at, "", class: "form-control" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success">
          <i class="glyphicon glyphicon-ok"></i>
          <%= t "save" %>
        </button>
        <button type="button" class="btn btn-warning" data-dismiss="modal">
          <i class="glyphicon glyphicon-remove"></i>
          <%= t "close" %>
        </button>
      </div>
    </div>
  </div>
</div>
